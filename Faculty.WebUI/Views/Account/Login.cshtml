@model LoginModel
@{
    ViewData["Title"] = "Login";
}

<h2>Sign in</h2>

<a asp-action="Register" asp-controller="Account">Registration</a>
@Html.ValidationSummary()
<form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div class="form-group">
        <div>
            <label asp-for="Login">Login</label><br />
            <input type="text" asp-for="Login" />
            <span asp-validation-for="Login" />
        </div>
        <div>
            <label asp-for="Password">Password</label><br />
            <input asp-for="Password" />
            <span asp-validation-for="Password" />
        </div>
        <div>
            <input type="submit" value="Sign in" class="btn" />
        </div>
    </div>
</form>

