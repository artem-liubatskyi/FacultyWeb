@model IEnumerable<Teacher>

@{
    ViewData["Title"] = "All teachers";
}

<h2>All teachers</h2>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <a asp-controller="Teachers" asp-action="Details" asp-route-id="@item.Id">@item.FullName</a>
            </td>
        </tr>
}
    </tbody>
</table>
